@page "{id}"
@model TakGhahWeb.Pages.Admin.Article.UpdateCategoryArticleModel
@{
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش کاربر</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
@*         <input type="hidden" asp-for="ArticlesCategoryViewModel.UserId" />
        <input type="hidden" asp-for="ArticlesCategoryViewModel.AvatarName" /> *@
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات دسته بندی مقاله
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>نام دسته بندی مثاله</label>
                       
                        <input type="text" asp-for="ArticlesCategoryViewModel.ArticlesCategoryName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>توضیحات مقاله</label>
                        <input type="text" asp-for="ArticlesCategoryViewModel.ArticlesCategoryDescription" class="form-control">
                    </div>
              
                
                    <input type="submit" value="ویرایش اطلاعات" class="btn btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    تصویر پروفایل
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                  @*   <img id="imgAvatar" class="thumbnail" src="/UserAvatar/@Model.EditUserViewModel.AvatarName" />
                    <div class="form-group">
                        <label>انتخاب تصویر</label>
                        <input type="file" asp-for="EditUserViewModel.UserAvatar">
                    </div> *@
                </div>
                <!-- /.panel-body -->
            </div>

        </div>

    </form>
</div>

@section Scripts
{
    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgAvatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#EditUserViewModel_UserAvatar").change(function () {
            readURL(this);
        });
    </script>
}


